root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.go]
indent_style = tab
tab_width = 4

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
